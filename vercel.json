{
  "version": 2,
  "name": "telegram-approval-cloud",
  "builds": [
    {
      "src": "src/webapp/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/webapp/server.js"
    },
    {
      "src": "/health",
      "dest": "src/webapp/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
