# ========================================
# НАСТРОЙКИ BACKEND-СЕРВИСА
# ========================================

# Основные настройки сервера
NODE_ENV=development
PORT=3000
BACKEND_URL=http://localhost:3000
BACKEND_SECRET=your-super-secret-key-here-change-in-production

# Настройки базы данных
DB_HOST=localhost
DB_PORT=3306
DB_NAME=telegram_approval
DB_USER=root
DB_PASSWORD=your-db-password

# Настройки Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_BOT_NAME=YourBotName

# Настройки Bitrix24
BITRIX24_WEBHOOK_URL=https://your-portal.bitrix24.ru/rest/bizproc.event.send
BITRIX24_AUTH_TOKEN=your-bitrix24-auth-token

# Настройки логирования
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Настройки безопасности
JWT_SECRET=your-jwt-secret-key-here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Настройки сжатия
COMPRESSION_LEVEL=6

# Настройки таймаутов
REQUEST_TIMEOUT=30000
TELEGRAM_API_TIMEOUT=10000
BITRIX24_API_TIMEOUT=30000

# Настройки согласований
DEFAULT_APPROVAL_TIMEOUT_HOURS=24
MAX_APPROVERS_PER_REQUEST=10

# Настройки SSL (для продакшена)
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CERT_PATH=/path/to/ssl/cert.pem

# Настройки мониторинга
HEALTH_CHECK_INTERVAL=30000
MEMORY_WARNING_THRESHOLD=500

# Настройки кэширования
CACHE_TTL=300000
REDIS_URL=redis://localhost:6379

# Настройки уведомлений
NOTIFICATION_EMAIL=admin@example.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Настройки разработки
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_CORS=true
